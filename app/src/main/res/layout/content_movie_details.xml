<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_store_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.task.tmdb.activities.MovieDetailsActivity"
    tools:showIn="@layout/activity_movie_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x0"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x2"
            android:scaleType="centerInside" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_movie_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x0"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x2"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="Title: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_movie_title"
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x2"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Release \n date: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_movie_date"
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x2"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Vote \n Average: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_movie_vote_avg"
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x2"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="Popularity: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_movie_popularity"
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x2"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="Overview: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_movie_overview"
                        android:layout_width="@dimen/x0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x2"
                        android:layout_weight="3"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:textStyle="normal" />


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>
